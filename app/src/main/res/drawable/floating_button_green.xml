<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"
			android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:startColor="@color/sendDarkGreenColor" android:endColor="@color/sendMeduimGreenColor" android:angle="90"/>
            <stroke android:width="2dp" android:color="#3E4976" />

        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="oval">
            <gradient android:startColor="@color/sendDarkGreenColor" android:endColor="@color/sendMeduimGreenColor" android:angle="90"/>

        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="oval">
            <gradient android:startColor="@color/sendMeduimGreenColor" android:endColor="@color/sendLightGreenColor" android:angle="90"/>

        </shape>
    </item>

</selector>